####Breadth First Search

public ArrayList<Integer> bfsOfGraph(int size, ArrayList<ArrayList<Integer>> adj) {
        // Code here
        ArrayList<Integer> list = new ArrayList<>();
        Queue<Integer> q = new LinkedList<Integer>();
        boolean[] visited = new boolean[size];
        q.add(0);
        visited[0] = true;
        while(!q.isEmpty()){
            int current = q.poll();
            list.add(current);
            ArrayList<Integer> neighbors = adj.get(current);
            for(int el:neighbors){
                if(visited[el] == false){
                    q.add(el);
                    visited[el] = true;
                }
            }
        }
        return list;
    }
    
####Depth First Search
public ArrayList<Integer> getDFS(boolean[] visited, int root, ArrayList<ArrayList<Integer>> adj, ArrayList<Integer> list){
        if(visited[root] == false){
            list.add(root);
            visited[root] = true;
            ArrayList<Integer> neighbors = adj.get(root);
            for(int el:neighbors){
                list = getDFS(visited, el, adj, list);
            }
        }
        return list;
    }
